<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.jazzant.pixivseriesdownloader.DatabaseViewerController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="10">
         <padding>
            <Insets top="5" right="5" bottom="5" left="15"/>
         </padding>
         <Label text="View Model:"/>
         <Button fx:id="toggleButton" text="Table View" onAction="#toggleView"/>
      </HBox>

   </top>
   <center>
      <VBox>
         <TableView fx:id="tableView" onContextMenuRequested="#selectTableItem" onMouseClicked="#selectTableItem" prefHeight="400.0" prefWidth="500.0"/>
         <TreeView visible="false" managed="false" fx:id="treeView" onContextMenuRequested="#selectTreeItem" onMouseClicked="#selectTreeItem" prefHeight="400.0" prefWidth="500.0" BorderPane.alignment="CENTER" />
      </VBox>
   </center>
   <right>
      <VBox fx:id="buttonsView" spacing="10" visible="false">
         <padding>
            <Insets top="5" right="5" bottom="5" left="10"/>
         </padding>
         <Button onAction="#handleUpdateStatus" text="Change Series Status"/>
         <Button onAction="#copyLinkToClipboard" text="Copy Series Link to Clipboard"/>
         <Button onAction="#openLinkInBrowser" text="Open Series in Browser"/>
         <Button text="Delete Series" onAction="#handleDeleteSeries"/>
      </VBox>
   </right>
   <bottom>
      <GridPane fx:id="detailsView" vgap="5" hgap="5" visible="false">
         <padding>
            <Insets top="5" right="10" bottom="5" left="15"/>
         </padding>
         <HBox GridPane.columnIndex="0" GridPane.rowIndex="0" alignment="CENTER_RIGHT">
            <Label text="Title :"/></HBox>
         <HBox GridPane.columnIndex="0" GridPane.rowIndex="1" alignment="CENTER_RIGHT">
            <Label text="Artist :"/></HBox>
         <HBox GridPane.columnIndex="0" GridPane.rowIndex="2" alignment="CENTER_RIGHT">
            <Label text="Status :"/></HBox>
         <HBox GridPane.columnIndex="0" GridPane.rowIndex="3" alignment="CENTER_RIGHT">
            <Label text="Link :"/></HBox>

         <Text fx:id="titleTxt" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
         <Text fx:id="artistTxt" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
         <Text fx:id="statusTxt" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
         <Text fx:id="linkTxt" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
      </GridPane>
   </bottom>
</BorderPane>
