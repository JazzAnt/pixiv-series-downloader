<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="CENTER" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.jazzant.pixivseriesdownloader.AddSeriesController">
    <padding>
        <Insets bottom="10" left="15" right="15" top="15" />
    </padding>

    <gridLinesVisible>true</gridLinesVisible>

    <Text text="Add a Series to the database" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />

    <Label text="Series Link" GridPane.columnIndex="0" GridPane.rowIndex="1" />

    <TextField fx:id="seriesLink" promptText=".../user/000000/series/000000" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <HBox alignment="BOTTOM_RIGHT" GridPane.columnIndex="1" GridPane.rowIndex="2">
        <Button onAction="#handleParseButtonAction" text="Parse" />
    </HBox>

    <Text fx:id="testText" text="test" GridPane.columnSpan="2" GridPane.rowIndex="3" />
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>

</GridPane>
